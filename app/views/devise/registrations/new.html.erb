<div class="text-center">
  <h2>サインアップ</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="form-group row">
      <%= f.label "メール", class: "col-md-3" %><br/>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control col-md-6", placeholder: "メール" %>
    </div>

    <div class="form-group row">
      <%= f.label "パスワード", class: "col-md-3" %><br/>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control col-md-6", placeholder: "パスワード" %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br/>
    </div>
    <div class="form-group row">
      <%= f.label "パスワード再度入力", class: "col-md-3" %><br/>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control col-md-6", placeholder: "パスワード再度入力" %>
    </div>

    <div class="actions">
      <%= f.submit "サインアップ" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>