<div class="text-center">
  <h2>ログイン</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group row">
      <%= f.label "メール", class: "col-md-3" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control col-md-6", placeholder: "メール" %>
    </div>

    <div class="form-group row">
      <%= f.label "パスワード", class: "col-md-3" %><br/>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control col-md-6", placeholder: "パスワード" %>
    </div>
    <div class="actions">
      <%= f.submit "ログイン", class: "btn btn-primary" %>
    </div>
  <% end %>
  <hr>
  初めての方はこちら
  <%= render "devise/shared/links" %>
</div>